<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfrimFinalOrder">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please confirm your shipment details."
        android:textSize="18dp"
        android:textColor="@color/bt"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textStyle="bold"

        />
    <EditText
        android:id="@+id/shimpnet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:layout_below="@+id/txt"
        android:layout_margin="15dp"
        android:textColor="@color/bt"

        />
    <EditText
        android:id="@+id/shimpnet_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:layout_below="@+id/shimpnet_name"
        android:layout_margin="15dp"
        android:textColor="@color/bt"

        />
    <EditText
        android:id="@+id/shimpnet_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:layout_below="@+id/shimpnet_phone"
        android:layout_margin="15dp"
        android:textColor="@color/bt"
        />
    <EditText
        android:id="@+id/shimpnet_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:layout_below="@+id/shimpnet_address"
        android:layout_margin="15dp"
        android:textColor="@color/bt"
        />
    <EditText
        android:id="@+id/shimpnet_postalcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Postal Code"
        android:layout_below="@+id/shimpnet_city"
        android:layout_margin="15dp"
        android:textColor="@color/bt"
        />

    <Button
        android:id="@+id/confirm_orderandbuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginRight="150dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttons"
        android:textAllCaps="false"
        android:padding="20dp"
        android:textSize="18sp"
        android:text="Confirm order!"
        android:textColor="@color/bt"
        />
</RelativeLayout>