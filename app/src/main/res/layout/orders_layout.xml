<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/shoper_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shoper Name"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/bt"
            />
        <TextView
            android:id="@+id/shoper_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shoper Address"
            android:layout_below="@+id/shoper_name"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/bt"
            />
        <TextView
            android:id="@+id/shoper_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shoper City"
            android:layout_below="@+id/shoper_address"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/bt"
            />
        <TextView
            android:id="@+id/shoper_postalcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shoper Postal Code"
            android:layout_below="@+id/shoper_city"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/bt"
            />
        <TextView
            android:id="@+id/shoper_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shoper Phone"
            android:layout_below="@+id/shoper_postalcode"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/bt"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>